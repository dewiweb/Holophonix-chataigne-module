{
	"name": "Holophonix",
	"type": "OSC",
	"path": "Spatial Audio",
	"version": "1.4",
	"description": "Module to interact with Holophonix spatial audio processor. Main purpose is to create Cues(or scenes) of tracks 3D positions(XYZ or AED) and Gains to reload them similar a lighting Cues logic.\n\n Chataigne Module specific documentation can be found in the README on GitHub: ",
	"url": "https://github.com/dewiweb/Holophonix_chataigne_module",
	"downloadURL": "https://github.com/dewiweb/Holophonix-chataigne-module/archive/refs/heads/main.zip",
	"hasInput": true,
	"hasOutput": true,
	"hideDefaultCommands": false,
	"hideDefaultParameters": [
		"colorSendMode",
		"autoRange",
		"autoFeedback",
		"pass_through",
		"input",
		"outputs",
		"useHierarchy",
		"colorSendMode",
		"booleanSendMode"
	],
	"defaults": {
		"autoAdd": false,
		"oscInput": {
			"localPort": 1234
		},
		"OSC Outputs": {
			"OSC Output": {
				"local": false,
				"remoteHost": "192.168.100.12",
				"remotePort": 4003
			}
		}
	},
	"parameters": {
		"Controlled Tracks": {
			"type": "Container",
			"Tracks IDs": {
				"description": "IDs of tracks to control.\n\n Can be formatted as single Object(ex: 15), range(ex: 8-13) \n\n or list(ex: 2,4,12,20)\n",
				"type": "String"
			},
			"Add Tracks": {
				"type": "Trigger"
			},
			"Remove Tracks": {
				"type": "Trigger"
			}
		},
		"Request Values": {
			"type": "Container",
			"Manual Request": {
				"type": "Trigger"
			},
			"Auto Request": {
				"description": "Update automatically tracks container values.\n",
				"type": "Boolean",
				"default": false
			},
			" Auto Request Rate": {
				"description": "automatic Get request Rate in milliseconds",
				"type": "Integer",
				"default": 1000,
				"min": 1,
				"max": 10000
			}
		},
		"Manage Cues": {
			"type": "Container",
			"Rec Mode": {
				"description": "ON : record position from Holo.\n\n OFF : send recorded positions to Holo.\n",
				"type": "Boolean",
				"default": true
			},
			"Coord Mode": {
				"description":"not applicable in Rec Mode!! Choose the coordinate system applicable for OSC outputs",
				"type":"Enum",
				"options": {"AED":"opt1", "XYZ":"opt2"},
				"readOnly": true
			},
			"New Cue's Name": {
				"description": "Set a specific Name (Default = Cue)",
				"type": "String"
			},
			"Create Cue": {
				"type": "Trigger"
			},
			"Select Cue": {
				"type": "Enum"
			},
			"Reload Cue": {
				"type": "Trigger"
			},
			"Update Cue": {
				"type": "Trigger"
			},
			"Delete Cue": {
				"type": "Trigger"
			}
		}
	},
	"scripts": [
		"Holophonix.js"
	],
	"values": {},
	"commands": {
		"Send xyz": {
			"menu": "Set tracks",
			"callback": "xyz",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				},
				"xyz": {
					"type": "Point3D",
					"min": [
						-20,
						-20,
						-20
					],
					"max": [
						20,
						20,
						20
					]
				}
			}
		},
		"Send aed": {
			"menu": "Set tracks",
			"callback": "aed",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				},
				"aed": {
					"type": "Point3D",
					"min": [
						-180,
						-90,
						0
					],
					"max": [
						180,
						90,
						20
					]
				}
			}
		},
		"Send gain": {
			"menu": "Set tracks",
			"callback": "gain",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				},
				"gain": {
					"type": "Float",
					"min": -60,
					"max": 12
				}
			}
		},
		"Get xyz": {
			"menu": "Get tracks",
			"callback": "getXYZ",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				}
			}
		},
		"Get aed": {
			"menu": "Get tracks",
			"callback": "getAED",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				}
			}
		},
		"Get gain": {
			"menu": "Get tracks",
			"callback": "getGain",
			"parameters": {
				"Source index": {
					"type": "Integer",
					"min": 1,
					"max": 128
				}
			}
		}
	}
}
